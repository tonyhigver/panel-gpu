datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String   @id @default(cuid())
  name          String?
  email         String   @unique
  image         String?
  emailVerified DateTime?
  isAdmin       Boolean  @default(false)
  hasPaid       Boolean  @default(false)  // ✅ Nuevo campo
  createdAt     DateTime @default(now())
  servers       Server[] // relación con Server
}

model Plan {
  id       String @id @default(cuid())
  name     String
  price    Int
  cpu      String
  ram      String
  gpu      String
  servers  Server[] // relación con Server
}

model Server {
  id        String   @id @default(cuid())
  userId    String
  planId    String
  state     String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  plan      Plan     @relation(fields: [planId], references: [id])
}
